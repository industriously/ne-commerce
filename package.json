{
  "name": "ne-commerce",
  "version": "0.0.1",
  "description": "nestjs template for ddd",
  "author": "rojiwon",
  "private": true,
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "git@github.com-industriously:industriously/account-server.git"
  },
  "bugs": {
    "url": "https://github.com/industriously/account-server/issues"
  },
  "main": "dist/main",
  "scripts": {
    "build": "rimraf dist && ttsc -p ./tsconfig.build.json",
    "dev": "npm run build && NODE_ENV=development node dist/main",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "start": "npm run build && pm2 start ecosystem.config.js --env production",
    "start:debug": "nest start --debug --watch",
    "pm2:dev": "npm run build && pm2 start ecosystem.config.js && pm2 save",
    "pm2:monit": "pm2 monit",
    "pm2:save": "pm2 save",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:reload": "pm2 reload ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js && pm2 save --force",
    "test": "jest --verbose=true -i",
    "test:cov": "rimraf coverage && jest -i --coverage",
    "swagger": "NODE_ENV=development nestia swagger",
    "sdk": "rimraf ./src/sdk/functional && NODE_ENV=development nestia sdk",
    "nestia": "npm run swagger && npm run sdk",
    "schema": "ls ./prisma/schema/*.prisma | xargs cat > ./prisma/schema.prisma",
    "db:update": "rimraf db && npm run schema && prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:dashboard": "prisma studio"
  },
  "dependencies": {
    "@devts/nestjs-auth": "^1.3.8",
    "@nestia/core": "^1.0.17",
    "@nestjs/common": "^9.3.12",
    "@nestjs/core": "^9.3.12",
    "@nestjs/jwt": "^10.0.2",
    "@nestjs/platform-express": "^9.3.12",
    "cls-hooked": "^4.2.2",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.0.3",
    "helmet": "^6.0.1",
    "jsonwebtoken": "^9.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "typia": "^3.6.9",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@nestia/sdk": "^1.0.16",
    "@nestjs/cli": "^9.3.0",
    "@nestjs/schematics": "^9.0.4",
    "@nestjs/testing": "^9.3.12",
    "@prisma/client": "^4.11.0",
    "@types/cls-hooked": "^4.3.3",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.17",
    "@types/jest": "29.5.0",
    "@types/node": "^18.15.7",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "29.5.0",
    "nestia": "^4.0.10",
    "pm2": "^5.3.0",
    "prettier": "^2.8.7",
    "prisma": "^4.11.0",
    "rimraf": "^4.4.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "29.0.5",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.1.2",
    "ttypescript": "^1.5.15",
    "typescript": "^4.9.5",
    "typescript-transform-paths": "^3.4.6"
  },
  "prisma": {
    "schema": "prisma/schema.prisma"
  }
}
